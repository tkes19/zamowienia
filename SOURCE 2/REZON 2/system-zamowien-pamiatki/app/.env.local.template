
# ==================================================
# WZÓR PLIKU .env.local (NIE KOMITOWAĆ)
# ==================================================
# 1. Skopiuj ten plik do `.env.local`
# 2. Uzupełnij wszystkie wartości zgodnie z danymi Supabase, Cloudflare R2 i lokalnymi ścieżkami
# 3. Przechowuj plik tylko lokalnie (upewnij się, że `.env.local` jest w `.gitignore`)

# --------------------------------------------------
# Supabase (API + baza danych)
# --------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=PASTE_YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=PASTE_YOUR_SERVICE_ROLE_KEY

# Pooler connection URL (zalecane przez Supabase PgBouncer)
# Przykład dla regionu eu-central-1: aws-1-eu-central-1.pooler.supabase.com:6543
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_POOLER_PASSWORD@aws-REGION.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1&pool_timeout=30"

# --------------------------------------------------
# NextAuth (autoryzacja)
# --------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=GENERATE_WITH_OPENSSL_OR_NODE

# --------------------------------------------------
# Cloudflare R2 (przechowywanie obrazów produktów)
# --------------------------------------------------
CLOUDFLARE_R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCOUNT_ID=YOUR_ACCOUNT_ID
CLOUDFLARE_R2_ACCESS_KEY_ID=YOUR_ACCESS_KEY_ID
CLOUDFLARE_R2_SECRET_ACCESS_KEY=YOUR_SECRET_ACCESS_KEY
CLOUDFLARE_R2_BUCKET_NAME=rezon-produkty
# CLOUDFLARE_R2_PUBLIC_DOMAIN=cdn.your-domain.com (opcjonalne)

# --------------------------------------------------
# Lokalne ścieżki do zasobów (jeśli korzystasz z udziałów sieciowych)
# --------------------------------------------------
PROJEKTY_MIEJSCOWOSCI_PATH=\\\\SERVER\Handlowcy\PROJEKTY_MIEJSCOWOSCI
KLIENCI_INDYWIDUALNI_PATH=\\\\SERVER\Handlowcy\PROJEKTY_MIEJSCOWOSCI\02. KLIENCI INDYWIDUALNI
IMIENNE_PATH=\\\\SERVER\Handlowcy\PROJEKTY_MIEJSCOWOSCI\03. IMIENNE
HASLA_PATH=\\\\SERVER\Handlowcy\PROJEKTY_MIEJSCOWOSCI\04. HASŁA
OKOLICZNOSCIOWE_PATH=\\\\SERVER\Handlowcy\PROJEKTY_MIEJSCOWOSCI\06. OKOLICZNOŚCIOWE

